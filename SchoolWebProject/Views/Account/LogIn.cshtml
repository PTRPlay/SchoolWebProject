@model SchoolWebProject.Domain.Models.LogInData

@{
    Layout = null;
}

<style>
    #loginBlock{
        margin-top:150px;
        margin-bottom:50px;
    }
    #errorMessage{
        color:red;
    }
</style>
<center>
    <div id="loginBlock">
        <p>
            <h2>Login</h2>
        </p>
        @using (Html.BeginForm("LogIn", "Account"))
        {
            <p>
                User name:
                @Html.TextBox("userName")
            </p>
            <p>
                Password  :
                @Html.Password("password")
                <div id="errorMessage">@ViewBag.error</div>
            </p>
            <input type="submit" value="Log in" />
        }
    </div>
</center>