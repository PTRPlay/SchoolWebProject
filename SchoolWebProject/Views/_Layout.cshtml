<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-ui-router.min.js"></script>
    <script src="~/Scripts/angular-ui-router.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script src="~/Scripts/angular-modal-service.js"></script>
    <script src="~/Scripts/app.js"></script>
    
    <script src="~/Layouts/Controllers/teacherController.js"></script>
    <script src="~/Layouts/Controllers/schelduleController.js"></script>
    <script src="~/Layouts/Controllers/subjectController.js"></script>
    <script src="~/Layouts/Controllers/newsController.js"></script>

    <script src="~/Layouts/Services/newsService.js"></script>
    <script src="~/Layouts/Services/schelduleService.js"></script>
    <script src="~/Layouts/Services/subjectsServic.js"></script>
    <script src="~/Layouts/Services/teachersServices.js"></script>
    
    <script src="~/Layouts/ModalControllers/Modal.js"></script>
    <script src="~/Layouts/ModalControllers/addTeacherController.js"></script>
    <script src="~/Layouts/Controllers/categoriesController.js"></script>
    <script src="~/Layouts/Services/categoriesService.js"></script>

</head>
<body ng-app="myApp">
    <div class="navbar  navbar-default navbar-fixed-top" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <a class="navbar-brand" ui-sref="home">AXE</a>
            </div>

            <div class="navbar-collapse collapse" ng-controller="ModalShowController">
                <ul class="nav navbar-nav">
                    <li><a href="#addTeachers" class="btn-danger" style="left:100px" ng-click="showTeachersEditPage()">Add Teachers</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a data-toggle="dropdown"><span class="caret"></span>Category</a>
                        <ul class="dropdown-menu">
                            @foreach (var i in ViewBag.TeacherDegrees)
                            {
                                <li><a>@i.Name</a></li>
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a data-toggle="dropdown"><span class="caret"></span>Subject</a>
                        <ul class="dropdown-menu">
                            @foreach (var i in ViewBag.Subjects)
                            {
                                <li><a>@i.Name</a></li>
                            }
                        </ul>
                    </li>

                    <li>
                        <a ui-sref="login">Login</a>
                    </li>
                </ul>

            </div>
        </div>
    </div>

    <div class="container-fluid" style="margin-top:70px">
        <div class="row">
            <div class="col-sm-2 sidebar affix">

                <ul class="nav nav-sidebar">
                    <li class="btn nav-tabs"><a ui-sref="teachers" class="btn-default">Teachers</a></li>
                    <li class="btn nav-tabs"><a ui-sref="subjects" class="btn-default">Subjects</a></li>
                    <li class="btn nav-tabs"><a ui-sref="scheldule" class="btn-default">Scheldule</a></li>
                    <li class="btn nav-tabs"><a ui-sref="news" class="btn-default">News</a></li>
                </ul>

            </div>
            <div class="cos-sm-9 col-sm-offset-3 main table">
                <div ui-view></div>
            </div>
        </div>  
    </div>

    <script src="~/Scripts/jquery-2.1.4.js"></script>


    @RenderBody()

</body>

</html>