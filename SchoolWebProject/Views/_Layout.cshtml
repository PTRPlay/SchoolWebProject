<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/angular.min.js"></script>
    <!-- Include the AngularJS routing library -->
    <script src="https://code.angularjs.org/1.2.28/angular-route.min.js"></script>

</head>
<body ng-app="myApp">
    
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">

        <ul class="nav navbar-fixed-top">
            <li class="navbar-right dropdown">
                <button href="#" data-toggle="dropdown"><span class="caret"></span>Category</button>
                <ul class="dropdown-menu">
                    @foreach (var i in ViewBag.TeacherDegrees)
                    {
                    <li><a>@i.Name</a></li>
                    }
                </ul>
            </li>
            <li class="navbar-right dropdown">
                <button href="#" data-toggle="dropdown"><span class="caret"></span>Subject</button>
                <ul class="dropdown-menu">
                    @foreach (var i in ViewBag.Subjects)
                    {
                    <li><a>@i.Name</a></li>
                    }
                </ul>
            </li>
        </ul>
    </div>

    <div class="container-fluid" style="margin-top:70px">
        <div class="row">
            <div class="col-sm-2 sidebar affix">

                <ul class="nav nav-sidebar">
                    <li class="btn nav-tabs"><a href="#teachers">Teachers</a></li>
                    <li class="btn nav-tabs">Subjects</li>
                    <li class="btn nav-tabs">Scheldule</li>
                    <li class="btn nav-tabs">News</li>
                </ul>

            </div>

            <div class="cos-sm-9 col-sm-offset-3 main" id="main-info">
                <ng-view></ng-view>
            </div>
        </div>
    </div>



    <script type="text/ng-template" id="Teachers.html" ng-controller="teachersController">
        <p>Kolia</p>
    </script>
    
    
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/app.js"></script>
        
    
    @RenderBody()

</body>
</html>