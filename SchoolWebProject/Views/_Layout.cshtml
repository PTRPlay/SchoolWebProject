<body ng-app="myApp">
    <div class="navbar  navbar-default navbar-fixed-top" role="navigation" style="height:52px">
        <div class="container">

            <div class="navbar-header" style="margin-top:1px">
                <a class="navbar-brand" ui-sref="home">SchoolProject</a>
            </div>
            <div>
                <ul class="nav navbar-nav navbar-right">
                    <li class="navbar-btn" style="margin-top:1px">
                        <a ui-sref="myprofile">Loged in as @Context.User.Identity.Name</a>
                    </li>
                    <li class="navbar-btn" style="margin-top:1px">
                        <a href="account/logout">Log out</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="margin-top:55px">
        <div class="row">
            <div class="leftmenu">
                <div class="col-sm-2 sidebar affix">

                    <ul class="nav nav-sidebar">
                        @foreach (var i in ViewBag.Links)
                        {
                            <li class="btn nav-tabs"><a ui-sref=@i.Value class="btn-default">@i.Key</a></li>
                        }
                    </ul>
                    </div>
                </div>
                <div class="col-sm-9 col-sm-offset-2 main table" style="width:1000px;">
                    <div ui-view></div>
                </div>
            </div>
    </div>

    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>

    @RenderBody()

</body>

